@model SURLYcmps439.Models.Relations.RelationToDisplayAllInformationViewModel

@{
    ViewBag.Title = "Temporary Relation Tuple";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "DetailsForTempRelation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Temporary Relation Tuples</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>@Model.NameOfRelation</th>
    </tr>

    <tr>
        @foreach (var attr in Model.RelationAttributes)
        {
            <td>
                <b><i>@attr.Name</i></b>
            </td>
        }
    </tr>

    @foreach (var tuple in Model.RelationsTuples)
    {
        <tr>
            @foreach (var cell in tuple.TupleCells)
            {
                <td>
                    @cell.Value
                </td>
            }
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Relations", "Index")
</p>
