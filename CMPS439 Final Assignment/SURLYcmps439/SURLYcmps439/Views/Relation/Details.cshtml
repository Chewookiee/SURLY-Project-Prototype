<h2>Relation Tuples</h2>

<h4>
    @Model.NameOfRelation
</h4>
<table class="table table-striped table-bordered">

    <tr>
        @foreach (var attr in Model.RelationAttributes)
        {
            <td>
                <b><i>@attr.Name</i></b>
            </td>
        }
    </tr>

    @foreach (var tuple in Model.RelationsTuples)
    {
        <tr>
            @foreach(var cell in tuple.TupleCells)
            {
                <td>
                    @cell.Value
                </td>
            }
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Relations", "Index", new { @class = "btn btn-default" })
</p>
